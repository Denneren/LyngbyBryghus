
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<marquee behavior="scroll" direction="left">
    <i>
        Abonnere nu og få flere forskellige specialøl leveret hver måned
    </i>
</marquee>



<div class="container-fluid">

    <div class="row" style="margin:10px 0;">

        <div class="col-sm-8">

            <div class="row">


                <div class="col-sm-12" style="background-color:#e0af2c; border-radius:5px 5px 0px 0px; margin-top:50px;border-right:2px solid rgba(99, 96, 96, 0.70);border-bottom:2px solid rgba(99, 96, 96, 0.70);">

                    <div class="col-sm-12">
                        <h2 style="color:rgba(249, 226, 102, 0.80);text-align:center;">
                            NYHED
                        </h2>

                    </div>
                </div>
            </div>
            <div class="row" style="background-color:antiquewhite;border-right:2px solid rgba(99, 96, 96, 0.70);">
                <div class="col-sm-3">
                    <img src="~/Content/BeerBrands/brand.png" style="max-height:250px;margin-top:30px;border-radius:5px;" />
                </div>

                <div class="col-sm-7">
                    <div class="container">
                        <br />
                        <h2 style="text-shadow: 1px 1px grey;"><b>Lakrids Ale</b></h2>
                        <br />

                        <p>
                            Denne ale er brygget som en traditionel brown ale.
                            Urten er tilsat en kraftig the lavet på tørret lakridsrod
                            hvilket giver en god fyldig eftersmag af lakridsrod,
                            og den har et fantastisk flot og holdbart skum
                            der også smager af lakrids.

                            <br />
                            <br />
                            <i> Den kan med fordel serveres afkølet.</i>
                        </p>
                    </div>
                </div>

                <div class="col-sm-2">
                    <img class="img-fluid imgcenter" style="max-height:100px;margin-top:10px;opacity:0.5" src="~/Content/img_506609.png" />
                    <p style="text-align:center;"> Special Øl</p>
                    <p style="text-align:center;font-size:30px;">Alc. 4,7 %</p>
                    <button id="beerbutton" class="imgcenter" type="submit">Tilføj til kurv</button>

                </div>


            </div><div class="row">

                <div class="col-sm-12" style="background-color:rgba(168, 138, 46, 0.68);min-height:20px;border-right:2px solid rgba(99, 96, 96, 0.70);border-bottom:2px solid rgba(99, 96, 96, 0.70);">

                </div>
            </div>




            <div class="row">
                <div class="col-sm-12" style="margin:20px 0 0 0;">
                    <img class="img-fluid" style="max-height:150px;margin:0 53px 0 0;" src="~/Content/GFX/banner bling.png" />
                    <img src="~/Content/GFX/lys øl.png" style="max-height:150px;margin:0 53px 0 0;" />
                    <img src="~/Content/GFX/mørk øl.png" style="max-height:150px;margin:0 53px 0 0;" />

                    <img src="~/Content/GFX/special øl1.png" style="max-height:150px;margin:0 53px 0 0;" />

                    <img style="max-height:150px;" src="~/Content/GFX/alle øl.png" />

                </div>
                <div class="col-sm-12" style="background-color:#d8a313;min-height:20px; border-radius:5px 5px 0px 0px;">
                    @*<select style="background-color:lightgrey;">
                            <option selected disabled>Vælg øl</option>
                            <option value="">Lysøl</option>
                            <option value="">Mørkøl</option>
                            <option value="">Specialøl</option>
                            <option value="">Alle øl</option>

                        </select>*@
                    <marquee behavior="scroll" direction="left">
                        <h2 style="color:rgba(249, 226, 102, 0.80);text-shadow:1px 1px rgba(126, 90, 11, 0.87)">Hvilken variant foretrækker Du?</h2>
                    </marquee>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12" style="background-color:#dcd8c3;">
                    <div class="container">
                        <hr />
                        <h3 style="text-align:center;color:rgba(149, 100, 10, 0.83)">Mørke Øl</h3>
                        <hr />
                        <img class="beerpic" src="~/Content/GFX/Small/BrownAle.png" />
                        <img class="beerpic" src="~/Content/GFX/Small/BrunUgle.png" />
                        <img class="beerpic" src="~/Content/GFX/Small/NewCasBrown.png" />
                    </div>
                </div>


            </div>


            <div class="container" style="margin-top:80px;margin-bottom:50px;">
                <div class="row">
                    <div class="col-sm-12">
                        <img class="img-fluid" src="~/Content/GFX/abonere 2.png" />
                        <button style="float:right;margin-right:100px;"><a style="text-decoration:none;color:orange;font-size:18px;" href="#">Bestil</a></button>
                    </div>
                </div>

            </div>
        </div>
        @*<div class="col-sm-1"></div>*@
        <div class="col-sm-4">
            @* Henter Partial view'et Omos fra ContentController'en *@
            @Html.Action("Omos", "Content")

            <div class="container" style="margin-top:60px;">
                <div class="row">
                    <div class="col-sm-6" style="margin-top:70px;">
                        <h5 style="color:rgba(128, 17, 17, 0.80)">
                            Red Abbey Ale
                        </h5>
                        <p>
                            Denne Red Abbey Ale er noget af det
                            bedste vi har lavet, den har en let sødme
                            med en let humlet smag, med en
                            behagelig ristet malt smag.
                            En utrolig let og lækker øl med god smag
                        </p>
                    </div>
                    <div class="col-sm-6">
                        <img class="img-fluid imgcenter" style="max-height:400px;display:block;border-radius:50%;opacity:0.8;border:5px dashed rgba(197, 91, 16, 0.73)" src="~/Content/GFX/red design.png" />

                    </div>
                </div>

            </div>


        </div>

    </div>
</div>
<marquee behavior="scroll" direction="left">

    <img class="img-fluid" style="max-height:150px;opacity:0.5;border-radius:5px;" src="~/Content/GFX/banner_bottom.png" />
</marquee>




